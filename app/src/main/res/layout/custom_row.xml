<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">
    
    <ImageView android:layout_width="54dp"
               android:layout_height="54dp"
               android:id="@+id/listIcon"
               android:src="@drawable/logo" android:layout_alignBottom="@+id/itemRecyclerText"/>

    <TextView
            android:id="@+id/itemRecyclerText"
            android:layout_width="wrap_content"
              android:layout_height="59dp"
            android:text="dummy text" android:layout_weight="0.54"
            android:layout_alignParentTop="true" android:layout_toEndOf="@+id/listIcon"/>
    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_row="12" android:layout_column="18">
    </GridLayout>

</GridLayout>