<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1" android:id="@+id/itemsRecyclerView">

    <ImageView android:layout_width="123dp"
               android:layout_height="123dp"
               android:id="@+id/listIcon"
               android:src="@drawable/logo" android:layout_row="0"
               android:layout_column="0" android:layout_columnSpan="5"
               android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    <TextView
            android:id="@+id/itemRecyclerText"
            android:layout_width="119dp"
              android:layout_height="54dp"
            android:text="dummy text" android:layout_weight="0.54"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentTop="true" android:layout_row="0"
            android:layout_column="5" android:layout_alignParentEnd="true" android:layout_toEndOf="@+id/listIcon"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="dummy Location"
            android:id="@+id/itemLocationRecyclerText" android:layout_row="13" android:layout_column="5"
            android:layout_alignBottom="@+id/listIcon"
            android:layout_below="@+id/itemRecyclerText" android:layout_alignEnd="@+id/itemRecyclerText"
            android:layout_toEndOf="@+id/listIcon"/>

</RelativeLayout>