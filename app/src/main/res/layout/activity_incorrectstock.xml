<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/activity_incorrectstock">

    <RadioGroup android:id="@+id/incorrectItemRadioGroup" android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:orientation="vertical">
        <RadioButton android:id="@+id/incorrectItemCorrectRadioGroup" android:text="Correct Item"
                     android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <RadioButton android:id="@+id/incorrectItemIncorrectRadioGroup" android:text="Incorrect Item"
                     android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </RadioGroup>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Amount Recived"
            android:id="@+id/amountRecivedTextView"/>
    <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/correctItemNumberPicker" android:orientation="vertical"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Issue"
            android:onClick="sendIssueButtonCicked"
            android:id="@+id/sendIssueButton"/>
</LinearLayout>